<Window x:Class="FileManagerSystem.Views.Dialogs.TextEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <ToolBar Grid.Row="0" Background="#F0F0F0">
            <Button Click="New_Click" ToolTip="新建">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📄" Margin="0,0,5,0"/>
                    <TextBlock Text="新建"/>
                </StackPanel>
            </Button>
            <Button Click="Open_Click" ToolTip="打开">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📂" Margin="0,0,5,0"/>
                    <TextBlock Text="打开"/>
                </StackPanel>
            </Button>
            <Button Click="Save_Click" ToolTip="保存">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="💾" Margin="0,0,5,0"/>
                    <TextBlock Text="保存"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Click="Cut_Click" ToolTip="剪切">
                <TextBlock Text="剪切"/>
            </Button>
            <Button Click="Copy_Click" ToolTip="复制">
                <TextBlock Text="复制"/>
            </Button>
            <Button Click="Paste_Click" ToolTip="粘贴">
                <TextBlock Text="粘贴"/>
            </Button>
            <Separator/>
            <Button Click="Undo_Click" ToolTip="撤销">
                <TextBlock Text="↶ 撤销"/>
            </Button>
            <Button Click="Redo_Click" ToolTip="重做">
                <TextBlock Text="↷ 重做"/>
            </Button>
        </ToolBar>

        <!-- 文本编辑区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBox x:Name="ContentTextBox" 
                     AcceptsReturn="True" 
                     AcceptsTab="True"
                     TextWrapping="Wrap"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"
                     FontFamily="Consolas"
                     FontSize="12"
                     Background="White"
                     BorderThickness="0"
                     Padding="10"
                     TextChanged="ContentTextBox_TextChanged"/>
        </ScrollViewer>

        <!-- 状态栏 -->
        <StatusBar Grid.Row="2" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="就绪"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="LineColumnTextBlock" Text="行: 1, 列: 1"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="CharCountTextBlock" Text="字符数: 0"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <Button Content="确定" Width="75" Height="25" Margin="5,0" Click="OK_Click"/>
                    <Button Content="取消" Width="75" Height="25" Margin="5,0" IsCancel="True"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window> 