<Window x:Class="FileManagerSystem.Views.Dialogs.PropertiesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="属性" Height="400" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 文件图标和名称 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="{Binding TypeIcon}" FontSize="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="{Binding FileName}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <Separator Grid.Row="1" Margin="0,0,0,15"/>

        <!-- 详细信息 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="类型:" Margin="0,5,10,5" FontWeight="Bold"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FileType}" Margin="0,5"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="位置:" Margin="0,5,10,5" FontWeight="Bold"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Location}" Margin="0,5" TextWrapping="Wrap"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="大小:" Margin="0,5,10,5" FontWeight="Bold"/>
            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Size}" Margin="0,5"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="创建时间:" Margin="0,5,10,5" FontWeight="Bold"/>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CreatedTime}" Margin="0,5"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="修改时间:" Margin="0,5,10,5" FontWeight="Bold"/>
            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ModifiedTime}" Margin="0,5"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="访问时间:" Margin="0,5,10,5" FontWeight="Bold"/>
            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding AccessedTime}" Margin="0,5"/>

            <TextBlock Grid.Row="6" Grid.Column="0" Text="起始块:" Margin="0,5,10,5" FontWeight="Bold"/>
            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding StartBlock}" Margin="0,5"/>

            <TextBlock Grid.Row="7" Grid.Column="0" Text="占用块数:" Margin="0,5,10,5" FontWeight="Bold"/>
            <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding BlockCount}" Margin="0,5"/>

            <TextBlock Grid.Row="8" Grid.Column="0" Text="分配的块:" Margin="0,5,10,5" FontWeight="Bold"/>
            <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding AllocatedBlocks}" Margin="0,5" TextWrapping="Wrap"/>
        </Grid>

        <!-- 按钮 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="确定" Width="75" Height="25" IsDefault="True" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window> 